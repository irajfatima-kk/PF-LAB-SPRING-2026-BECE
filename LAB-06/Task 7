#include <stdio.h>
int main() {
    int choice, a, b;
    do {
        printf("\nMenu:\n1. Addition\n2. Subtraction\n3. Exit\nEnter choice: ");
        scanf("%d", &choice);
        if(choice == 1 || choice == 2) {
            printf("Enter two numbers: ");
            scanf("%d %d", &a, &b);
            if(choice == 1) printf("Result = %d\n", a+b);
            else printf("Result = %d\n", a-b);
        }
    } while(choice != 3);
    return 0;
}
