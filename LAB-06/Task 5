#include <stdio.h>
int main() {
    int temp, count = 0, sum = 0;
    printf("Enter temperatures (-999 to stop):\n");
    while(1) {
        scanf("%d", &temp);
        if(temp == -999) break;
        sum += temp;
        count++;
    }
    if(count > 0) printf("Average temperature = %.2f\n", (float)sum/count);
    else printf("No valid readings entered.\n");
    return 0;
}
